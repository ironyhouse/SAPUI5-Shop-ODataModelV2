<mvc:View controllerName="sap.ui.Shop.controller.Categories" height="100%"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:core="sap.ui.core"
	xmlns:layout="sap.ui.layout"
	xmlns="sap.m"
	xmlns:f="sap.f"
	xmlns:fb="sap.ui.comp.filterbar"
	xmlns:vm="sap.ui.comp.variants">
	<f:DynamicPage class="sapUiNoContentPadding">
		<!-- Title -->
		<f:title>
			<f:DynamicPageTitle>
				<f:heading>
					<Title class="sapUiSmallMarginBegin" text="{i18n>homePageTitle}" />
				</f:heading>
			</f:DynamicPageTitle>
		</f:title>
		<!-- Header -->
		<f:header>
			<f:DynamicPageHeader pinnable="true">
				<f:content>
					<fb:FilterBar
						id="filterbar"
						search="onFilterCategories"
						clear="onFilterCategoriesClear"
						showClearOnFB="true"
						showFilterConfiguration="true"
						useToolbar="false"
						showGoOnFB="true">
						<fb:filterGroupItems >
							<!-- Name -->
							<fb:FilterGroupItem groupName="G1" visibleInFilterBar="true" name="Name" label="{i18n>categoryName}">
								<fb:control>
									<MultiInput
										id="CategoriesMultiInput"
										placeholder="{i18n>selectCategoryPlaceholder}"
										width="40%"
										valueHelpOnly="true"
										valueHelpRequest="onValueHelpOpenPress"
										tokenUpdate="onFilterCategories"
										showValueHelp="true">
									</MultiInput>
								</fb:control>
							</fb:FilterGroupItem>
						</fb:filterGroupItems>
					</fb:FilterBar>
				</f:content>
			</f:DynamicPageHeader>
		</f:header>
		<!-- Content -->
		<f:content>
			<Table id="CategoriesTable" class="sapUiSmallMarginTop" items="{oData>/Categories}" mode="SingleSelectLeft" selectionChange="onSelectCategoryPress" width="auto">
				<!-- Product List Bar -->
				<headerToolbar>
					<OverflowToolbar design="Solid">
						<!-- Title -->
						<Title class="sapUiMediumMarginBegin" text="{i18n>categories}" />
						<!-- Spacer -->
						<ToolbarSpacer />
						<Button id="AddCategoryButton" text="{i18n>add}" type="Transparent" press="onAddCategoryPress" />
						<Button id="DeleteCategoryButton" text= "{i18n>delete}" type="Transparent" enabled="{State>/State/isShowDeleteCategoryButton}" press="onDeleteCategoryButtonPress" />
					</OverflowToolbar>
				</headerToolbar>
				<columns>
					<Column>
						<HBox class="sapUiSmallMarginBegin" alignItems="Center" justifyContent="Center">
							<Label text="{i18n>name}" design="Bold" />
						</HBox>
					</Column>
				</columns>
				<items>
					<ColumnListItem
						type="Navigation"
						press=".onNavToCategory">
						<VBox class="sapUiSmallMarginBegin">
							<Text text="{oData>Name}"/>
						</VBox>
					</ColumnListItem>
				</items>
			</Table>
		</f:content>
	</f:DynamicPage>
</mvc:View>



