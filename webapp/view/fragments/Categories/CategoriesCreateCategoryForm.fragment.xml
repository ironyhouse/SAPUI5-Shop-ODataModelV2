<core:FragmentDefinition xmlns="sap.m"
    xmlns:f="sap.ui.layout.form"
    xmlns:core="sap.ui.core">
    <Dialog
        title="{i18n>categoryCreationTitle}"
        id="CategoryCreatorDialog">
        <f:SimpleForm
            maxContainerCols="1"
            layout="ResponsiveGridLayout"
            labelSpanL="12"
            labelSpanM="12"
            emptySpanL="0"
            emptySpanM="0"
            columnsL="1"
            columnsM="1">
            <f:content>
                <!-- Name -->
                <Label text="{i18n>categoryName}"/>
                <Input
                    id="CategoryNameInput"
                    value= "{
						path: 'Category>/Name',
						type: 'sap.ui.model.type.String',
						constraints: {
							minLength: 1,
							maxLength: 50
						}
					}"
                    required="true"
                    placeholder="{i18n>enterCategoryPlaceholder}"
                    change="checkFormValid" />
            </f:content>
        </f:SimpleForm>
        <!-- Buttons -->
        <buttons>
            <Button
                id="CreateCategoryButton"
                type="Emphasized"
                text="{i18n>create}"
                enabled="{State>/State/isShowCreateCategoryButton}"
                press="onCreateCategoryFormPress"/>
            <Button
                text="{i18n>cancel}"
                press="onCancelCategoryFormPress" />
        </buttons>
    </Dialog>
</core:FragmentDefinition>