<core:FragmentDefinition
	xmlns="sap.ui.comp.valuehelpdialog"
	xmlns:m="sap.m"
	xmlns:fb="sap.ui.comp.filterbar"
	xmlns:core="sap.ui.core">
	<ValueHelpDialog
		id="ProductValueHelp"
		title="{i18n>categories}"
		ok=".onValueHelpOkPress"
		cancel=".onValueHelpCancelPress"
		afterClose=".onValueHelpAfterClose"
		supportRanges="true"
		key="Name"
		descriptionKey="Name">

		<filterBar>
			<fb:FilterBar advancedMode="true" search=".onFilterBarSearch" isRunningInValueHelpDialog="true">
				<fb:filterGroupItems>
					<fb:FilterGroupItem
						groupName="Category"
						name="Name"
						label="{i18n>categoryName}"
						visibleInFilterBar="true">
						<fb:control>
							<m:Input name="Name" placeholder="{i18n>categorySearchPlaceholder}" />
						</fb:control>
					</fb:FilterGroupItem>
				</fb:filterGroupItems>
			</fb:FilterBar>
		</filterBar>


	</ValueHelpDialog>
</core:FragmentDefinition>
