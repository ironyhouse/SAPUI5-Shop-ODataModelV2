<core:FragmentDefinition xmlns:mvc="sap.ui.core.mvc"
    xmlns:core="sap.ui.core"
    xmlns="sap.m"
    xmlns:fb="sap.ui.comp.filterbar">
    <ViewSettingsDialog
        id="SortDialog"
		confirm=".onSortProductList">
        <sortItems>
            <ViewSettingsItem text="{i18n>name}" key="Name" selected="true" id="Name" />
            <ViewSettingsItem text="{i18n>price}" key="Price" />
            <ViewSettingsItem text="{i18n>rating}" key="Rating"/>
        </sortItems>
	</ViewSettingsDialog>
</core:FragmentDefinition>