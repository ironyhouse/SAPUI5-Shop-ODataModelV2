<mvc:View controllerName="sap.ui.Shop.controller.ProductList"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:core="sap.ui.core"
	xmlns="sap.uxap"
	xmlns:layout="sap.ui.layout"
	xmlns:f="sap.f"
	xmlns:m="sap.m">
	<ObjectPageLayout showTitleInHeaderContent="true" showEditHeaderButton="true" upperCaseAnchorBar="false" editHeaderButtonPress="handleEditBtnPress">
		<headerTitle>
			<ObjectPageDynamicHeaderTitle>
				<!-- Title -->
				<heading>
					<m:Title text="{oData>Name}" wrapping="true" />
				</heading>
			</ObjectPageDynamicHeaderTitle>
		</headerTitle>

		<!-- Content -->
		<sections>
			<ObjectPageSection titleUppercase="false" showTitle="false" title="{i18n>productListTitle}">
				<subSections>
					<ObjectPageSubSection>
						<blocks>
							<!-- Product Table -->
							<core:Fragment fragmentName="sap.ui.Shop.view.fragments.ProductList.ProductListTable" type="XML"/>
						</blocks>
					</ObjectPageSubSection>
				</subSections>
			</ObjectPageSection>
		</sections>

	</ObjectPageLayout>
</mvc:View>